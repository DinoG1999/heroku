<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <%= form_for ([@music, @comment]) do |f| %>
            <div class="form-group">
                <%= f.text_area :content, class: "form-control", placeholder: "Comment" %>
            </div>
            <div class="form-group">
                <%= f.submit "Edit comment", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
    <div class="col-3"></div>
</div>
